{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://rekor.sigstore.dev/types/participantrecord/v0.0.1/participantrecord_v0_0_1_schema.json",
    "title": "Participantrecord v0.0.1 Schema",
    "description": "Schema for Participantrecord v0.0.1 object",
    "type": "object",
    "properties": {
      "participantId": {
        "type": "string",
        "description": "ID of the participant"
      },
      "primaryPK": {
        "type": "string",
        "description": "Primary public key"
      },
      "alternatePK": {
        "type": "string",
        "description": "Alternate public key (optional)"
      },
      "createdAt": {
        "type": "string",
        "format": "date-time",
        "description": "Entry creation timestamp in RFC3339 format (ISO 8601)"
      },
      "encryptionType": {
        "type": "string",
        "enum": ["RSA", "DEFAULT"],
        "description": "Specifies the encryption type used for documents associated with this participant (RSA when a participant key is available, DEFAULT when no key is provided)"
      }
    },
    "required": ["participantId", "createdAt", "encryptionType"]
  }
  